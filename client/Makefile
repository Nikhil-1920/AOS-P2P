# Client Makefile  
CXX = g++
CXXFLAGS = -std=c++11 -Wall -Wextra -pthread -O2
TARGET = client
SOURCES = client.cpp
HEADERS = client.h sha1.h

$(TARGET): $(SOURCES) $(HEADERS)
	@echo "ðŸ”¨ Compiling $(TARGET)..."
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(SOURCES)

clean:
	@echo "ðŸ§¹ Cleaning client..."
	rm -f $(TARGET)

.PHONY: clean